generator client {
  provider = "prisma-client"
  output   = "./generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(uuid())
  name           String
  email          String  @unique
  password       String
  avatarUrl      String?
  currency       String  @default("USD")
  language       String  @default("en-US")
  accountId      String  @unique @default(uuid())
  initialBalance Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions           Transaction[]    @relation("userTransactions")
  sentTransactions       Transaction[]    @relation("senderTransactions")
  receivedTransactions   Transaction[]    @relation("recipientTransactions")
  budgets                Budget[]
  pots                   Pot[]
  recurringBills         RecurringBill[]  @relation("userRecurringBills")
  sentRecurringBills     RecurringBill[]  @relation("recurringBillSender")
  receivedRecurringBills RecurringBill[]  @relation("recurringBillRecipient")
  accounts               Account[]
  recurringAlerts        RecurringAlert[]
  budgetAlerts           BudgetAlert[]

  notifications      Notification[]
  passwordRecoveries PasswordRecovery[]

  @@map("users")
}

model PasswordRecovery {
  id     String  @id @default(uuid())
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  token  String  @unique
  used   Boolean @default(false)

  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
  @@index([token])
  @@map("password_recoveries")
}

model Transaction {
  id          String   @id @default(uuid())
  type        String   @default("EXPENSE") // "INCOME", "EXPENSE", "TRANSFER"
  description String?
  amount      Float
  frequency   String? // "WEEKLY", "BIWEEKLY", "MONTHLY", "YEARLY"
  contactName String?
  avatar      String?
  date        DateTime @default(now())
  isRecurring Boolean  @default(false)

  // Relations
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  // senderId    String?
  // sender      User?     @relation("senderTransactions", fields: [senderId], references: [accountId], onDelete: SetNull)
  // recipientId String?
  // recipient   User?     @relation("recipientTransactions", fields: [recipientId], references: [accountId], onDelete: SetNull)
  senderId   String?
  sender     User?     @relation("senderTransactions", fields: [senderId], references: [id], onDelete: SetNull)

  recipientId String?
  recipient   User?   @relation("recipientTransactions", fields: [recipientId], references: [id], onDelete: SetNull)

  userId String
  user   User   @relation("userTransactions", fields: [userId], references: [id], onDelete: Cascade)

  recurringBillId String?
  recurringBill   RecurringBill? @relation("recurringBillTransactions", fields: [recurringBillId], references: [id], onDelete: SetNull)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime? // ✅ ADD: For soft deletes

  @@index([userId])
  @@index([categoryId])
  @@index([senderId])
  @@index([recipientId])
  @@index([recurringBillId])
  @@index([type])
  @@index([date])
  @@index([deletedAt])
  @@map("transactions")
}

model RecurringBill {
  id                  String    @id @default(uuid())
  description         String?
  amount              Float
  recurrenceDay       Int?
  recurrenceFrequency String?
  nextDueDate         DateTime? // Track when next bill is due
  isActive            Boolean   @default(true) // Allow pausing bills

  // Relations
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  userId String
  user   User   @relation("userRecurringBills", fields: [userId], references: [id], onDelete: Cascade)

  senderId String?
  sender   User?   @relation("recurringBillSender", fields: [senderId], references: [accountId], onDelete: SetNull)

  recipientId String?
  recipient   User?   @relation("recurringBillRecipient", fields: [recipientId], references: [accountId], onDelete: SetNull)

  generatedTransactions Transaction[] @relation("recurringBillTransactions")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([senderId])
  @@index([recipientId])
  @@index([nextDueDate]) // For finding due bills
  @@index([isActive])
  @@map("recurring_bills")
}

model Category {
  id             String          @id @default(uuid())
  name           String          @unique
  transactions   Transaction[]
  budgets        Budget[]
  recurringBills RecurringBill[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Budget {
  id        String    @id @default(uuid())
  amount    Float
  spent     Float     @default(0) // Track current spending
  period    String    @default("MONTHLY") // "WEEKLY", "MONTHLY", "YEARLY"
  startDate DateTime  @default(now())
  endDate   DateTime?
  isActive  Boolean   @default(true)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  themeId String?
  theme   Theme?  @relation("budgetThemes", fields: [themeId], references: [id], onDelete: SetNull)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([themeId])
  @@index([startDate, endDate])
  @@index([isActive])
  @@map("budgets")
}

model Pot {
  id            String    @id @default(uuid())
  name          String
  targetAmount  Float
  currentAmount Float     @default(0)
  targetDate    DateTime? // When do they want to reach the target?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  themeId String?
  theme   Theme?  @relation("potThemes", fields: [themeId], references: [id], onDelete: SetNull)

  transactions PotTransaction[] // Track deposits/withdrawals

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([themeId])
  @@map("pots")
}

model PotTransaction {
  id        String   @id @default(uuid())
  potId     String
  pot       Pot      @relation(fields: [potId], references: [id], onDelete: Cascade)
  amount    Float // Positive for deposits, negative for withdrawals
  type      String // "DEPOSIT", "WITHDRAWAL"
  note      String?
  createdAt DateTime @default(now())

  @@index([potId])
  @@index([createdAt])
  @@map("pot_transactions")
}

model Theme {
  id          String   @id @default(uuid())
  color       String   @unique
  description String?
  budgets     Budget[] @relation("budgetThemes")
  pots        Pot[]    @relation("potThemes")

  @@map("themes")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

